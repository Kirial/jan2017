/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"
#include "IOJD.h"
#include "sleep.h"
void runDemo();
int main()
{
    init_platform();

    printf("Hello World\n\r");

    cleanup_platform();
    runDemo();
    return 0;
}

void runDemo(){
	int i;
	if(setIO() != XST_SUCCESS){
		print("ERROR\n\r");
	}
	sleep(2);
	while(1){

		pinMode(0,1);

		digitalWrite(0,HIGH);
		printf("turning on 0 \n\r");
		sleep(1);

		pinMode(01,1);
		digitalWrite(1,HIGH);
		printf("turning on 1 \n\r");
		sleep(1);

		pinMode(2,1);
		digitalWrite(2,HIGH);
		printf("turning on 2 \n\r");
		sleep(1);

		pinMode(3,1);
		digitalWrite(3,HIGH);
		printf("turning on 3 \n\r");
		sleep(1);

		pinMode(4,1);
		digitalWrite(4,HIGH);
		printf("turning on 4 \n\r");
		sleep(1);


		pinMode(5,0);
		digitalWrite(5,HIGH);
		printf("turning on 5 \n\r");
		sleep(1);

		pinMode(6,1);
		digitalWrite(6,HIGH);
		printf("turning on 6 \n\r");
		sleep(1);

		pinMode(7,1);
		digitalWrite(7,HIGH);
		printf("turning on 7 \n\r");
		sleep(1);
	}
}
