

#include "Steppermotostyring.h"
#include "IOJD.h"
#include "sleep.h"
#include <stdio.h>


void step1() {

  digitalWrite(0, HIGH);
  digitalWrite(1, LOW);
  digitalWrite(2, LOW);
  digitalWrite(3, LOW);
}
void step2() {

  digitalWrite(0, LOW);
  digitalWrite(1, LOW);
  digitalWrite(2, HIGH);
  digitalWrite(3, LOW);
}
void step3() {

  digitalWrite(0, LOW);
  digitalWrite(1, HIGH);
  digitalWrite(2, LOW);
  digitalWrite(3, LOW);
}
void step4() {

  digitalWrite(0, LOW);
  digitalWrite(1, LOW);
  digitalWrite(2, LOW);
  digitalWrite(3, HIGH);
}

void rollForward() {


	step1();
  usleep(10000);
  step2();
  usleep(10000);
  step3();
  usleep(10000);
  step4();
  usleep(10000);
  printf("run\n\r");
}


void rollBackward() {


  step2();
  usleep(10000);
  step1();
  usleep(10000);
  step4();
  usleep(10000);
  step3();
  usleep(10000);
  printf("run\n\r");
}
